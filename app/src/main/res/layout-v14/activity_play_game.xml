<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.seanredmond.darts_scorer.play_game"
    android:background="#ff621664">

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gridlayout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <Button
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/num_1"
            android:layout_row="13"
            android:layout_column="0"
            android:text="@string/num_one"
            android:textColor="#ff9c10a4"
            android:textSize="20sp"
            android:gravity="center"
            android:onClick="numClicked"
            android:outlineProvider="paddedBounds"
            android:layout_rowWeight="1" />

        <Button
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/num_two"
            android:id="@+id/num_2"
            android:layout_row="13"
            android:layout_column="1"
            android:textColor="#ff9c10a4"
            android:textSize="20sp"
            android:gravity="center"
            android:onClick="numClicked"
            android:outlineProvider="paddedBounds"
            android:layout_rowWeight="1" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/num_three"
            android:id="@+id/num_3"
            android:layout_row="13"
            android:layout_column="2"
            android:textColor="#ff9c10a4"
            android:textSize="20sp"
            android:gravity="center"
            android:onClick="numClicked"
            android:outlineProvider="paddedBounds"
            android:layout_rowWeight="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button18"
            android:layout_row="13"
            android:layout_column="4"
            android:text="@string/mode"
            android:textColor="#ff9c10a4"
            android:textSize="20sp"
            android:gravity="center"
            android:outlineProvider="paddedBounds"
            android:layout_columnSpan="1" />

        <Button
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/num_four"
            android:id="@+id/num_4"
            android:layout_row="14"
            android:layout_column="0"
            android:textColor="#ff9c10a4"
            android:textSize="20sp"
            android:gravity="center"
            android:onClick="numClicked"
            android:outlineProvider="paddedBounds" />

        <Button
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/num_five"
            android:id="@+id/num_5"
            android:layout_row="14"
            android:layout_column="1"
            android:textColor="#ff9c10a4"
            android:textSize="20sp"
            android:gravity="center"
            android:onClick="numClicked"
            android:outlineProvider="paddedBounds" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/num_six"
            android:id="@+id/num_6"
            android:layout_row="14"
            android:layout_column="2"
            android:textColor="#ff9c10a4"
            android:textSize="20sp"
            android:gravity="center"
            android:onClick="numClicked"
            android:outlineProvider="paddedBounds" />

        <Button
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:id="@+id/stats_button"
            android:layout_row="14"
            android:layout_column="4"
            android:text="@string/stats"
            android:textColor="#ff9c10a4"
            android:textSize="20sp"
            android:gravity="center"
            android:onClick="onClick"
            android:outlineProvider="paddedBounds" />

        <Button
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/num_seven"
            android:id="@+id/num_7"
            android:layout_row="15"
            android:layout_column="0"
            android:textColor="#ff9c10a4"
            android:textSize="20sp"
            android:gravity="center"
            android:onClick="numClicked"
            android:outlineProvider="paddedBounds" />

        <Button
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/num_8"
            android:id="@+id/num_8"
            android:layout_row="15"
            android:layout_column="1"
            android:textColor="#ff9c10a4"
            android:textSize="20sp"
            android:gravity="center"
            android:onClick="numClicked"
            android:outlineProvider="paddedBounds" />

        <Button
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/num_9"
            android:id="@+id/num_9"
            android:layout_row="15"
            android:layout_column="2"
            android:textColor="#ff9c10a4"
            android:textSize="20sp"
            android:gravity="center"
            android:onClick="numClicked"
            android:outlineProvider="paddedBounds" />

        <Button
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:id="@+id/delete_button"
            android:layout_row="15"
            android:layout_column="4"
            android:elegantTextHeight="false"
            android:textColor="#ff9c10a4"
            android:textSize="20sp"
            android:text="@string/del_character"
            android:gravity="center"
            android:onClick="deleteClicked"
            android:outlineProvider="paddedBounds" />

        <Button
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/button3"
            android:layout_row="16"
            android:layout_column="0"
            android:text="@string/undo"
            android:textColor="#ff9c10a4"
            android:textSize="20sp"
            android:gravity="center"
            android:outlineProvider="paddedBounds" />

        <Button
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/num_0"
            android:layout_row="16"
            android:layout_column="1"
            android:text="@string/num_zero"
            android:textColor="#ff9c10a4"
            android:textSize="20sp"
            android:gravity="center"
            android:onClick="numClicked"
            android:outlineProvider="paddedBounds" />

        <Button
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/button11"
            android:layout_row="16"
            android:layout_column="2"
            android:text="@string/redo_button"
            android:textColor="#ff9c10a4"
            android:textSize="20sp"
            android:gravity="center"
            android:outlineProvider="paddedBounds" />

        <Button
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="@string/enter_button"
            android:id="@+id/enterButton"
            android:layout_row="16"
            android:layout_column="4"
            android:textColor="#ff9c10a4"
            android:textSize="20sp"
            android:gravity="center"
            android:onClick="enterClicked"
            android:outlineProvider="paddedBounds" />

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"></TableRow>

    </GridLayout>

    <TextView
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"

        android:id="@+id/scoredTxtBox"
        android:textSize="35sp"
        android:textColor="#fffffbf9"
        android:background="#fffd5aff"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_alignTop="@+id/btnStart"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/player_1"
        android:id="@+id/textView2"
        android:textColor="#ffffffff"
        android:background="#ff2b1629"
        android:layout_below="@+id/textView8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/player_2"
        android:id="@+id/textView4"
        android:textColor="#ffffffff"
        android:background="#ff614962"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/current_player_name_heading"
        android:id="@+id/textView6"
        android:textColor="#ffffffff"
        android:textSize="20sp"
        android:textIsSelectable="false"
        android:textStyle="bold|italic"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/score_left_heading"
        android:id="@+id/textView7"
        android:textColor="#ffffffff"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:layout_above="@+id/textView9"
        android:layout_alignRight="@+id/remainingTxtBox"
        android:layout_alignEnd="@+id/remainingTxtBox" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/player_heading"
        android:id="@+id/textView8"
        android:textColor="#ffffffff"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView9"
        android:background="#fffd5aff"
        android:gravity="center"
        android:textColor="#ffffffff"
        android:textStyle="bold"
        android:layout_below="@+id/textView8"
        android:layout_toLeftOf="@+id/btnStart"
        android:layout_toStartOf="@+id/btnStart" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView10"
        android:background="#fffd5aff"
        android:gravity="center"
        android:textColor="#ffffffff"
        android:textStyle="bold"
        android:layout_below="@+id/textView9"
        android:layout_alignRight="@+id/textView11"
        android:layout_alignEnd="@+id/textView11" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/legs_heading"
        android:id="@+id/textView11"
        android:textColor="#ffffffff"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:layout_above="@+id/textView9"
        android:layout_alignRight="@+id/textView9"
        android:layout_alignEnd="@+id/textView9" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView5"
        android:background="#fffd5aff"
        android:gravity="center"
        android:textColor="#ffffffff"
        android:textStyle="bold"
        android:layout_alignTop="@+id/textView10"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/remainingTxtBox"
        android:background="#fffd5aff"
        android:gravity="center"
        android:textColor="#ffffffff"
        android:textStyle="bold"
        android:layout_below="@+id/textView7"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>


    <Button
        android:id="@+id/btnStart"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="Start"
        android:textColor="#ff9c10a4"
        android:outlineProvider="paddedBounds"
        android:layout_below="@+id/textView6"
        android:layout_alignLeft="@+id/btnStop"
        android:layout_alignStart="@+id/btnStop" />

    <Button
        android:id="@+id/btnStop"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="Stop"
        android:textColor="#fffefdff"
        android:background="#ffff171b"
        android:textStyle="bold"
        android:textSize="25sp"
        android:outlineProvider="paddedBounds"
        android:layout_alignTop="@+id/textViewTime"
        android:layout_alignRight="@+id/gridlayout"
        android:layout_alignEnd="@+id/gridlayout" />

    <TextView
        android:id="@+id/textViewTime"
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:textSize="25sp"
        android:background="#fffd5aff"
        android:textColor="#ffffffff"
        android:layout_below="@+id/scoredTxtBox"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
