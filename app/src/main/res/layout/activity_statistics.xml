<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.sean_redmond.darts_scorer.statistics"
    android:background="@drawable/gradient"
    android:id="@+id/relative_layout">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/three_dart_ave"
        android:id="@+id/textView15"
        android:textColor="#ffffffff"
        android:textSize="20sp"
        android:layout_below="@+id/textView24"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView16"
        android:text="@string/one_dart_average"
        android:textColor="#ffffffff"
        android:layout_below="@+id/textView15"
        android:layout_centerHorizontal="true"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/maximums"
        android:id="@+id/textView18"
        android:textColor="#ffffffff"
        android:layout_alignRight="@+id/textView20"
        android:layout_alignEnd="@+id/textView20"
        android:textSize="20sp"
        android:layout_below="@+id/textView16" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView19"
        android:text="@string/one_fortys"
        android:textColor="#ffffffff"
        android:layout_below="@+id/textView18"
        android:layout_alignLeft="@+id/textView18"
        android:layout_alignStart="@+id/textView18"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/one_hundreds"
        android:id="@+id/textView20"
        android:textColor="#ffffffff"
        android:layout_below="@+id/textView19"
        android:layout_centerHorizontal="true"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/statistics_heading"
        android:id="@+id/textView13"
        android:background="#ff2fa4ff"
        android:gravity="center"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:shadowColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/legs_played"
        android:id="@+id/textView21"
        android:textColor="#ffffffff"
        android:textSize="15sp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/textView13"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/sixty_plus"
        android:id="@+id/textView22"
        android:textColor="#ffffffff"
        android:layout_below="@+id/textView20"
        android:layout_centerHorizontal="true"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/legsCompleted"
        android:textColor="#ff7bff8c"
        android:layout_alignTop="@+id/textView21"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/player1_tag_in_statistics_activity"
        android:id="@+id/textView"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_marginTop="35dp"
        android:background="#ff2fa4ff"
        android:layout_below="@+id/legsCompleted"
        android:layout_alignRight="@+id/textView21"
        android:layout_alignEnd="@+id/textView21" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/player2_tag_in_statistics_activity"
        android:id="@+id/textView3"
        android:textColor="#000000"
        android:textSize="20sp"
        android:background="#ff2fa4ff"
        android:layout_alignTop="@+id/textView"
        android:layout_toRightOf="@+id/textView16"
        android:layout_toEndOf="@+id/textView16" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/sixtyPlusP1"
        android:textColor="#ff7bff8c"
        android:layout_alignTop="@+id/textView22"
        android:layout_alignLeft="@+id/tonPlusP1"
        android:layout_alignStart="@+id/tonPlusP1"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/sixtyPlusP2"
        android:textColor="#ff7bff8c"
        android:layout_below="@+id/textView20"
        android:layout_alignLeft="@+id/tonFortyPlusP2"
        android:layout_alignStart="@+id/tonFortyPlusP2"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tonPlusP1"
        android:textColor="#ff7bff8c"
        android:layout_below="@+id/tonFortyPlusP1"
        android:layout_alignLeft="@+id/tonFortyPlusP1"
        android:layout_alignStart="@+id/tonFortyPlusP1"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tonFortyPlusP1"
        android:textColor="#ff7bff8c"
        android:layout_alignBottom="@+id/textView19"
        android:layout_alignLeft="@+id/tonEightyPlusP1"
        android:layout_alignStart="@+id/tonEightyPlusP1"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tonFortyPlusP2"
        android:textColor="#ff7bff8c"
        android:layout_below="@+id/tonEightyPlusP2"
        android:layout_alignLeft="@+id/tonEightyPlusP2"
        android:layout_alignStart="@+id/tonEightyPlusP2"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tonEightyPlusP1"
        android:textColor="#ff7bff8c"
        android:layout_alignLeft="@+id/oneDAveP1"
        android:layout_alignStart="@+id/oneDAveP1"
        android:layout_below="@+id/textView16"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tonEightyPlusP2"
        android:textColor="#ff7bff8c"
        android:layout_below="@+id/oneDAveP2"
        android:layout_alignLeft="@+id/oneDAveP2"
        android:layout_alignStart="@+id/oneDAveP2"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/legs_won"
        android:id="@+id/textView24"
        android:textColor="#ffffffff"
        android:textSize="20sp"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/legsWonP1"
        android:textColor="#ff7bff8c"
        android:textSize="20sp"
        android:layout_above="@+id/threeDAveP1"
        android:layout_alignTop="@+id/textView24"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/legsWonP2"
        android:textColor="#ff7bff8c"
        android:textSize="20sp"
        android:layout_above="@+id/threeDAveP2"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3"
        android:layout_marginRight="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/oneDAveP1"
        android:textColor="#ff7bff8c"
        android:layout_alignBottom="@+id/textView16"
        android:layout_alignLeft="@+id/threeDAveP1"
        android:layout_alignStart="@+id/threeDAveP1"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/oneDAveP2"
        android:layout_alignBottom="@+id/textView16"
        android:layout_alignLeft="@+id/threeDAveP2"
        android:layout_alignStart="@+id/threeDAveP2"
        android:textColor="#ff7bff8c"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/threeDAveP1"
        android:textColor="#ff7bff8c"
        android:layout_alignTop="@+id/textView15"
        android:layout_alignLeft="@+id/legsWonP1"
        android:layout_alignStart="@+id/legsWonP1"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/threeDAveP2"
        android:textColor="#ff7bff8c"
        android:layout_alignTop="@+id/textView15"
        android:layout_alignLeft="@+id/legsWonP2"
        android:layout_alignStart="@+id/legsWonP2"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tonPlusP2"
        android:textColor="#ff7bff8c"
        android:layout_above="@+id/sixtyPlusP2"
        android:layout_alignLeft="@+id/sixtyPlusP2"
        android:layout_alignStart="@+id/sixtyPlusP2"
        android:textSize="20sp" />

</RelativeLayout>
